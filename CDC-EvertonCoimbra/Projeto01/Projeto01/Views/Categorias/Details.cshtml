@model Modelo.Tabela.Categoria
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes Categoria";
}
<div class="panel panel-primary">
    <div class="panel-body">
        @Html.Partial("~/Views/Categorias/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        <div class="col-md-offset-2	col-md-10">
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Alterar", "Edit", new { id = Model.CategoriaID }, new { @class = "btn btn-danger" })
        </div>
        <br />
        <br />
    </div>
</div>

@Html.Partial("~/Views/Produtos/_PorCategoria.cshtml", Model.Produtos.ToList())